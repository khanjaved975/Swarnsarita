            android:name="com.project.jewelmart.darshan.worker.OrderDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.project.jewelmart.darshan.SubCatagoryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.project.jewelmart.darshan.CustomeOrderActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_custome_order"
