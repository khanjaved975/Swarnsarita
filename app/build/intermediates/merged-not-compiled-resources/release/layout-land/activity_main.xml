                        android:layout_margin="2dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingTop="4dp"
                        android:text="Others"
                        android:textColor="@color/colorAccent"
                        android:textSize="17sp"
                        android:textStyle="bold" />

