<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:elevation="4dp"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="5dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/logo" />

                    <!--  Email Label -->


                    <!--  Password Label -->


                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/sp_counntry"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/colorAccent"

                        />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/sp_state"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="4dp"

                        android:backgroundTint="@color/colorAccent"

                        />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/sp_city"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/colorAccent" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tieAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pincode"
                            android:inputType="number"
                            android:textColor="@color/grey_60"
                            android:textColorHint="@color/grey_60"
                            android:theme="@style/EditTextStyle"
                            app:backgroundTint="@color/grey_60" />


                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilgst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:visibility="visible"
                        android:layout_marginTop="4dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tiegst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="GST Number"
                            android:inputType="text"
                            android:textColor="@color/grey_60"
                            android:textColorHint="@color/grey_60"
                            android:theme="@style/EditTextStyle"
                            app:backgroundTint="@color/grey_60" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilshope"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="3dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tieshope"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Office Name"
                            android:inputType="text"
                            android:textColor="@color/grey_60"
                            android:textColorHint="@color/grey_60"
                            android:theme="@style/EditTextStyle"
                            app:backgroundTint="@color/grey_60" />

                    </android.support.design.widget.TextInputLayout>

                    <!-- <Spinner
                         android:id="@+id/sp_clientid"

                         android:layout_width="fill_parent"
                         android:layout_height="35dp"
                         android:layout_marginBottom="4dp"
                         android:entries="@array/array"
                         />

                     <Spinner
                         android:id="@+id/sp_usertype"
                         android:layout_width="fill_parent"
                         android:layout_height="35dp"
                         android:layout_marginBottom="4dp"
                         android:entries="@array/array"
                         />-->

                    <!--
                                        <android.support.design.widget.TextInputLayout

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:layout_marginTop="2dp"
                                            card_view:passwordToggleTint="@android:color/white"
                                            >

                                            <android.support.design.widget.TextInputEditText
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="Reference"
                                                android:textColor="@android:color/white"
                                                android:textColorHint="@android:color/white"
                                                android:theme="@style/EditTextStyle"
                                                app:backgroundTint="@android:color/white"
                                                android:inputType="textPassword" />
                                        </android.support.design.widget.TextInputLayout>
                    -->

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>